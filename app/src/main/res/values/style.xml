<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Gender_Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/dp_15</item>
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
        <item name="android:layout_marginRight">@dimen/dp_20</item>
        <item name="android:background">@drawable/rounded_rec_orange</item>
    </style>

    <style name="Filter_TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
        <item name="android:layout_marginRight">@dimen/dp_20</item>

    </style>

    <style name="Filter_lineview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:layout_marginRight">@dimen/dp_20</item>
        <item name="android:background">@color/light_gray</item>

    </style>
    <style name="Filter_Fulllineview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:background">@color/light_gray</item>

    </style>

    <style name="Filter_LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>

    </style>

    <style name="Filter_Headings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/dp_20</item>
        <item name="android:layout_margin">@dimen/dp_20</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RadioButtonText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/dp_20</item>
        <item name="android:textSize">@dimen/sp_20</item>
    </style>

    <style name="RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/dp_20</item>

    </style>
    <style name="Buttons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/dp_25</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:background">@drawable/rounded_rec_orange</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BlueButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/dp_25</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:background">@drawable/rounded_blue_rect</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>