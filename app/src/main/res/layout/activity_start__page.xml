<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/voilet"
    android:layout_height="match_parent"
    tools:context=".Start_Page">

    <ImageButton
        android:id="@+id/ibDropDownList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/ivImageBackground"
        app:layout_constraintLeft_toLeftOf="@id/ivImageBackground"
        app:layout_constraintTop_toTopOf="@id/ivImageBackground"
        android:layout_marginTop="@dimen/dp_10"
        android:src="@drawable/drop_down_icon"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@color/voilet"
        />

    <ImageView
        android:id="@+id/ivImageBackground"
        android:layout_width="350dp"
        android:layout_height="@dimen/dp_350"
        android:src="@drawable/jaumo_bg_image"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.089"
        />

    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JAUMO"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_45"
        android:drawableStart="@drawable/bg_image"
        android:drawablePadding="@dimen/dp_10"
        app:layout_constraintTop_toTopOf="@id/ivImageBackground"
        app:layout_constraintBottom_toBottomOf="@id/ivImageBackground"
        app:layout_constraintStart_toStartOf="@id/ivImageBackground"
        android:layout_marginStart="@dimen/dp_30"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvHeading"
        android:text="@string/find_your_someone"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_22"
        app:layout_constraintEnd_toEndOf="@id/tvHeading"
        app:layout_constraintStart_toStartOf="@id/tvHeading"
        />


    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:layout_constraintTop_toBottomOf="@id/ivImageBackground"
        android:layout_marginTop="@dimen/dp_60"
        android:background="@drawable/rectangle_red_bg"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:text="@string/sign_up"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_24"
        android:textStyle="bold"
        android:textAllCaps="false"/>


    <Button
        android:id="@+id/btnGoogleSignUp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:layout_constraintTop_toBottomOf="@id/btnSignUp"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/rectangle_white_bg"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:text="Sign up with Google"
        android:textSize="@dimen/sp_24"
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_google_icon"
        android:textAllCaps="false"/>

    <TextView
        android:id="@+id/tvPolicy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signing_in_policy"
        app:layout_constraintTop_toBottomOf="@id/btnGoogleSignUp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_30"
        android:textColor="@color/gray"
        android:textSize="@dimen/sp_15"/>


    <TextView
        android:id="@+id/tvHaveAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvPolicy"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/have_account"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dp_50"
        android:textSize="@dimen/sp_15"
        />


    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvHaveAccount"
        android:text="@string/log_in"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_24"/>















</androidx.constraintlayout.widget.ConstraintLayout>